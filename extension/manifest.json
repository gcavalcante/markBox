{
  "name": "MarkBox",
  "version": "1.0",
  "description": "Syncs bookmarks with your Facebook Groups",
  "icons": {
    "128": "icon128.png"
  },

  "background": { "scripts": ["assets/js/jquery-1.7.1.min.js", "oauth2/oauth2.js", "background.js"] },
  "browser_action": {
    "default_title": "markBox",
    "default_icon": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/connect/login_success.html*"],
      "js": ["oauth2/oauth2_inject.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
      "bookmarks",
      "tabs",
      "https://graph.facebook.com/",
      "http://amigonerd.cloudapp.net/*"
  ],
  "manifest_version": 2
}
